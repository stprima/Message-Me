<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayoutNewMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <EditText
                android:id="@+id/whereToSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:hint="To:"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ContactsButton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.10"
                android:src="@drawable/ic_input_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewDefault"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#E0FFFF"
            android:gravity="center"
            android:text="Date and Time Properties" />

        <RelativeLayout
            android:id="@+id/setDate"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="3dp"
            android:padding="6dip" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:src="@drawable/ic_input_add" />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="26dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/image1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="NOW"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvChangeHeadingDateTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image1"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/image1"
                android:gravity="center_vertical"
                android:text="Click here to set Date and Time"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#E0FFFF"
            android:gravity="center"
            android:text="Repeating Properties" />

        <RelativeLayout
            android:id="@+id/setFrequency"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="3dp"
            android:padding="6dip" >

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:src="@drawable/ic_input_add" />

            <TextView
                android:id="@+id/tvFrequency"
                android:layout_width="wrap_content"
                android:layout_height="26dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/image2"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="ONCE"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvChangeHeadingFrequency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image2"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/image2"
                android:gravity="center_vertical"
                android:text="Click here to change Frequency"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <EditText
            android:id="@+id/whatToSend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:gravity="top"
            android:hint="Type Message Here"
            android:scrollbars="vertical" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/teview23"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:enabled="false" >
            </TextView>

            <Button
                android:id="@+id/buttonAddKeywords"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/teview23"
                android:text="Add Keywords"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonSaveAsDraft"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/teview23"
                android:text="Save as Draft"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/teview24"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:enabled="false" >
            </TextView>

            <Button
                android:id="@+id/buttonPreviewSms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/teview24"
                android:text="Preview"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonHidePreview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/teview24"
                android:text="Hide Preview"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonSendSms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Send / Schedule Message"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>